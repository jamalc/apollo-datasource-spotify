{
  "name": "apollo-datasource-spotify",
  "version": "0.0.1",
  "description": "RESTDataSource wrapper for the Spotify API",
  "author": "Jamal Carvalho <jamal.a.carvalho@gmail.com>",
  "homepage": "https://github.com/jamalc/apollo-datasource-spotify#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamalc/apollo-datasource-spotify.git"
  },
  "scripts": {
    "build": "rm -rf dist/* && tsc",
    "develop": "tsc -w",
    "lint": "eslint . --ext .ts",
    "graphql": "graphql-codegen"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint . --ext .ts --fix",
      "git add"
    ],
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "bugs": {
    "url": "https://github.com/jamalc/apollo-datasource-spotify/issues"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.17.7",
    "@graphql-codegen/typescript": "^1.17.7",
    "@types/lodash": "^4.14.159",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "apollo-datasource-rest": "^0.9.3",
    "dataloader": "^2.0.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "graphql": "^15.3.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "bottleneck": "^2.19.5"
  },
  "peerDependencies": {
    "apollo-datasource-rest": "^0.9.3",
    "dataloader": "^2.0.0",
    "graphql": "^15.3.0"
  }
}
